<div id="contiene">
    {% for key,entity in promociones %}
    {% set control = (key+1)%3 %}
        <fieldset>
        <div class="control-group">
            <label class="nombre">{{ entity.nombre }}</label>
        </div>
        <div class="control-group">
            <label class="control-label">Detalle:</label>
            <div class="controls">
                    {% for idProducto in entity.idProducto %}
                        <span>
                        {{ idProducto }} <img src="{{ asset('/uploads/producto/'~idProducto.idProducto.imagen) | apply_filter('micromini_producto') }}" />
                        </span>
                        <br>
                    {% endfor %}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Precio: ${{ entity.precio }} <span class="valido">V&aacute;lido hasta {{ entity.validoHasta|date('d-m') }}</span></label>
        </div>
    </fieldset>
    {% if control == 0 %}
        <fieldset style="width: 940px">
            <div style="border-top: #000 solid thin"></div>
        </fieldset>
    {% endif %}
    {% endfor %}
</div>
<style>
#contiene{
    width: 920px;
    text-align: left;
}
fieldset{
    border: none;
    float: left;
    min-width: 270px;
    padding: 0 10px;
}
.nombre{
    font-weight: bold;
    text-align: center;
}
.valido{
    float: right;
}
.control-group{
    margin-bottom: 20px;
}
</style>