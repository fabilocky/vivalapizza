{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - CierreCaja {{ 'views.new.creation'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h3>Cerrar caja nro: {{ entity.idCaja }}</h3>

<form class="well" action="{{ path('cierrecaja_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit" class="btn btn-success">Cerrar</button>
    </p>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('cierrecaja') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
</div>
<style>
    form.well {
        padding-top: 10px;
    }
    h3{
        padding-left: 20px;
    }
</style>
{% endblock %}